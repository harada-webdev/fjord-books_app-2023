<p>
  <strong><%= t('.mention') %>:</strong>
    <% if (mentioned_reports = report.mentioned_reports.order(:id).includes(mentioned_reports: :user).presence) %>
      <ul>
        <% mentioned_reports.each do |mentioned_report| %>
          <li>
            <%= link_to mentioned_report.title, mentioned_report %>
            <small>
              (<%= mentioned_report.user.name_or_email %> - <%= l mentioned_report.created_at, format: :short %>)
            </small>
          </li>
        <% end %>
      </ul>
  <% else %>
    (<%= t('.no_mentions') %>)
  <% end %>
</p>
