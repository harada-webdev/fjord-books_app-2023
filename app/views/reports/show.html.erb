<%= render @report %>

<div>
  <% if @report.user == current_user %>
    <p>
      <%= link_to "Edit this report", edit_report_path(@report) %> | <%= link_to "Back to reports", reports_path %>
      <%= button_to "Destroy this report", @report, method: :delete %>
    </p>
  <% else %>
    <p><%= link_to "Back to reports", reports_path %></p>
  <% end %>
</div>
