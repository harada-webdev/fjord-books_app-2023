<p style="color: green"><%= notice %></p>

<h1><%= t('title.books') %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
  <div class="index-item">
    <%= render book %>
    <p>
      <%= link_to t('links.show_book'), book %>
    </p>
  </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t('links.new_book'), new_book_path %>
</nav>
